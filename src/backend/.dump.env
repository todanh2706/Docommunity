# ============= APP CONFIG =============
SPRING_APPLICATION_NAME=documunity
SERVER_SERVLET_CONTEXT_PATH=/api

# ============= DATABASE =============
# Ví dụ khi chạy bằng Docker, host DB là service name "postgres"
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/docommunity
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=change_me_db_password
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# ============= JWT =============
# Đặt chuỗi ngẫu nhiên, dài, khó đoán
APP_JWT_SECRET=change_me_super_secret_jwt_key
APP_JWT_ACCESS_EXPIRATION_MS=3600000
APP_JWT_REFRESH_EXPIRATION_MS=3600000

# ============= GEMINI =============
# API key lấy từ Google AI Studio / Console
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_ID=gemini-2.5-flash-lite

# ============= MAIL =============
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_USERNAME=your_email@gmail.com
SPRING_MAIL_PASSWORD=your_app_password_here

# ============= FRONTEND URL =============
APP_FRONTEND_URL=http://localhost:3000







































